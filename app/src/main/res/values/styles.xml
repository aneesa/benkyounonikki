<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextView</item>
    </style>

    <style name="MyTextView" parent="android:Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyHeaderTextView" parent="@style/MyTextView">
        <item name="android:background">#424242</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyHiraganaTextView" parent="@style/MyHeaderTextView">
        <item name="android:background">#616161</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="MyRomajiTextView" parent="@style/MyTextView">
        <item name="android:background">#9E9E9E</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">3dip</item>
    </style>

</resources>
