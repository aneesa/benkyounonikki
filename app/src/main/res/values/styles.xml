<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextView</item>
    </style>

    <style name="MyTextView" parent="android:Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyAIUEOHeaderTextView" parent="@style/MyTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">@layout/textview_header_aiueo</item>
    </style>

    <style name="MyAIUEOTextView" parent="@style/MyAIUEOHeaderTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@layout/textview_aiueo</item>
    </style>

</resources>
